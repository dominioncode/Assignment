# Copy this file to .env and set strong values
JWT_SECRET=replace_this_with_a_long_random_secret
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10
# MySQL connection settings
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
## If you run MySQL via XAMPP, the default root account commonly has NO password.
## Set this to an empty value for XAMPP (or set your custom password here).
MYSQL_PASSWORD=
MYSQL_DATABASE=assignment_dev
# Default the server to use mysql2 for local development (change if your machine doesn't run MySQL)
DB_CLIENT=sqlite3
# Default local MySQL password (change this in production or set your own in .env)
# MYSQL_PASSWORD=example
DATABASE_FILE=./dev.sqlite3
PORT=4000
