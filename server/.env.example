# Copy this file to .env and set strong values
JWT_SECRET=replace_this_with_a_long_random_secret
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10
# MySQL connection settings
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=assignment_dev
# Which DB client to use for development: sqlite3 or mysql2
# Default to MySQL for the development environment. To use sqlite3 locally
# set DB_CLIENT=sqlite3 and set DATABASE_FILE accordingly.
DB_CLIENT=mysql2
# If you prefer sqlite for quick local runs set DATABASE_FILE
DATABASE_FILE=./dev.sqlite3
PORT=4000

# Raptor mini (Preview) â€” AI model routing (set to true to enable)
# When enabled the server will forward /api/ai requests to the configured RAPTOR_MINI_URL
# Set RAPTOR_MINI_API_KEY if your provider requires authentication
RAPTOR_MINI_ENABLED=false
RAPTOR_MINI_URL=
RAPTOR_MINI_API_KEY=
